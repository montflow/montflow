{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["./src/**/*", "./*.config.ts"]
}
