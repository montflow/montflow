{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",

    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.config.ts", "**/*.test.ts"]
}
