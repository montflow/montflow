{
  "name": "@montflow/root",
  "author": "Daniel Montilla",
  "version": "0.0.0",
  "packageManager": "pnpm@9.0.0",
  "private": true,
  "scripts": {
    "web:dev": "pnpm --filter @montflow/web run dev",
    "core:test": "pnpm --filter @montflow/core run test",
    "core:build": "pnpm --filter @montflow/core run build",
    "core:dev": "pnpm --filter @montflow/core run dev",
    "core:publish": "pnpm run core:build && pnpm --filter @montflow/core publish --access public"
  },
  "dependencies": {
    "solzu": "^2.0.0",
    "valibot": "^0.42.1"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-svelte": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "turbo": "^2.2.3"
  }
}